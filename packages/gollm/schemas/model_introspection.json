{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "answer": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          }
        },
        "required": ["name", "reason"],
        "additionalProperties": false
      }
    }
  },
  "required": ["answer"],
  "additionalProperties": false
}
